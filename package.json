    "lint:fix": "eslint . --fix",
    "prepare": "husky install",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.43.0",
    "@commitlint/cli": "^17.7.1",
