{
  "name": "@chantouchsek/validatorjs",
  "version": "1.0.4",
  "description": "The validator-js library makes data validation in JavaScript very easy in both the browser and Node.js.",
  "main": "dist/main.js",
  "types": "typings/main.d.ts",
  "scripts": {
    "dev": "tsc -w",
    "clean": "rimraf dist",
    "build": "yarn clean && tsc",
    "test": "jest --passWithNoTests --bail --detectOpenHandles --verbose",
    "test:watch": "yarn test --watchAll",
    "test:cov": "yarn test --coverage",
    "release": "standard-version && git push --follow-tags origin main && yarn publish",
    "lint:js": "eslint --ext \".js,.ts\" --ignore-path .gitignore .",
    "lint:prettier": "prettier --check .",
    "lint": "yarn lint:js && yarn lint:prettier",
    "lintfix": "prettier --write --list-different . && yarn lint:js --fix",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chantouchsek/validator-js.git"
  },
  "files": [
    "dist",
    "typings"
  ],
  "keywords": [
    "validator",
    "validator-js",
    "node"
  ],
  "author": {
    "name": "Chantouch Sek",
    "email": "chantouchsek.cs83@gmail.com",
    "url": "https://chantouch.me"
  },
  "engines": {
    "node": "^12.20.0 || >=14.13.0"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache",
    "*.**": "prettier --check --ignore-unknown"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chantouchsek/validator-js/issues"
  },
  "homepage": "https://github.com/chantouchsek/validator-js#readme",
  "devDependencies": {
    "@commitlint/cli": "^16.0.1",
    "@commitlint/config-conventional": "^16.0.0",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.5",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "husky": "^8.0.0",
    "jest": "^27.5.1",
    "lint-staged": "^12.1.4",
    "node-notifier": "^10.0.0",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "standard-version": "^9.3.2",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "typescript": "^4.5.4"
  }
}
