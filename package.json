    "@types/lodash": "^4.14.198",
    "@types/node": "^20.6.3",
    "@vitest/coverage-v8": "^0.34.4",
    "eslint": "^8.49.0",
    "eslint-plugin-import": "^2.28.1",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "node-notifier": "^10.0.1",
    "rimraf": "^5.0.1",
    "standard-version": "^9.5.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "vitest": "^0.34.4"
